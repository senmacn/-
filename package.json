{
  "name": "mapeditor",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "map-editor for pwrd-7",
  "main": "electron/main/dist/index.cjs",
  "scripts": {
    "start": "vite --port=4000",
    "dev": "vite --port=4000",
    "build": "cross-env MODE=production && vite build",
    "build:all": "cross-env MODE=production && npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./electron/main && cross-env MODE=production vite build",
    "build:preload": "cd ./electron/preload && cross-env MODE=production vite build",
    "build:renderer": "cross-env MODE=production vite build",
    "clean": "rimraf dist-electron && rimraf dist",
    "package": "npm run clean && npm run build:all && electron-builder build --config scripts/electron-builder.config.cjs --config.asar=false",
    "package:refresh": "electron-builder build --config scripts/electron-builder.config.cjs --config.asar=false",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "preview": "vite preview",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "typecheck:main": "tsc --noEmit -p tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p electron/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p electron/renderer/tsconfig.json"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.1.0",
    "@scena/ruler": "^0.18.6",
    "@simonwep/pickr": "^1.8.2",
    "@vue/runtime-core": "^3.3.4",
    "@vue/shared": "^3.3.4",
    "@vueuse/core": "^9.13.0",
    "ant-design-vue": "^3.2.20",
    "cross-env": "7.0.3",
    "custom-electron-titlebar": "^4.2.3",
    "d3-quadtree": "^3.0.1",
    "fast-glob": "^3.2.12",
    "lodash-es": "^4.17.21",
    "moveable": "^0.46.1",
    "pinia": "^2.1.4",
    "q-floodfill": "^1.3.1",
    "selecto": "^1.25.0",
    "v-contextmenu": "^3.0.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@types/d3-quadtree": "^3.0.2",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.16.18",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "consola": "^2.15.3",
    "electron": "23.2.1",
    "electron-builder": "23.6.0",
    "electron-updater": "5.3.0",
    "eslint": "8.37.0",
    "eslint-plugin-vue": "9.10.0",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.3.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue-tsc": "1.6.5"
  }
}